<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <springProperty scope="context" name="appName" source="spring.application.name" defaultValue="user-service"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>

    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <http>
            <url>http://loki:3100/loki/api/v1/push</url>
            <connectionTimeoutMs>3000</connectionTimeoutMs>
            <requestTimeoutMs>3000</requestTimeoutMs>
        </http>
        <batchSize>100</batchSize>
        <batchTimeoutMs>2000</batchTimeoutMs>
        <sendQueueMaxBytes>10485760</sendQueueMaxBytes>
        <dropRateLimitedBatches>true</dropRateLimitedBatches>
        <useDirectBuffers>true</useDirectBuffers>
        <drainOnStop>false</drainOnStop>
        <format>
            <label>
                <pattern>application=${appName},host=${HOSTNAME},level=%level</pattern>
            </label>
            <message>
                <pattern>
                    {
                    "level":"%level",
                    "class":"%logger{36}",
                    "thread":"%thread",
                    "message": "%message",
                    "trace_id": "%X{traceId}",
                    "span_id": "%X{spanId}"
                    }
                </pattern>
            </message>
        </format>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOKI"/>
    </root>
</configuration>
